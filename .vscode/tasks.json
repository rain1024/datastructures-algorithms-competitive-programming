{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-std=c++17",
        "-I/Library/Developer/CommandLineTools/usr/include/c++/extensions/",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "type": "cppbuild",
      "label": "C++: Build and run active file",
      "command": "${workspaceFolder}/build/${fileBasenameNoExtension}",
      "problemMatcher": [
        "$gcc"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
    }
  ],
  "version": "2.0.0"
}